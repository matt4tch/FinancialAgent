{
  "manifest_version": 3,
  "name": "Wealth Persona",
  "version": "1.0",
  "description": "A Chrome extension that provides financial advice and helps users manage stocks.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/wealth_persona_logo.png",
      "48": "icons/wealth_persona_logo.png",
      "128": "icons/wealth_persona_logo.png"
    }
  },
  "icons": {
    "16": "icons/wealth_persona_logo.png",
    "48": "icons/wealth_persona_logo.png",
    "128": "icons/wealth_persona_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://portal.interactivebrokers.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["contentScript.js", "assets/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
