{
  "manifest_version": 3,
  "name": "Financial Agent",
  "version": "1.0",
  "description": "A Chrome extension that provides financial advice and helps users manage stocks.",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://www.moodify.design/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/wealth_persona_logo.png",
      "48": "icons/wealth_persona_logo.png",
      "128": "icons/wealth_persona_logo.png"
    }
  },
  "icons": {
    "16": "icons/wealth_persona_logo.png",
    "48": "icons/wealth_persona_logo.png",
    "128": "icons/wealth_persona_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.moodify.design/"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
